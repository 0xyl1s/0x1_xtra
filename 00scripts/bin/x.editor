#!/usr/bin/env ruby
# encoding: utf-8
# tested with ruby 1.9.3

require_relative "../lib/ec1/users/utils/editor.rb"

module Ec1 module Users module Utils


case ARGV.size
  when 0
    Editor.new.edit
  else
    ARGV.each do |e_file|
      Editor.new.edit(e_file)
    end
end


end end end


